[all]
files = **.py
ignore = .git/**, **/__pycache__/**, **/migrations/**
max_line_length = 80
use_spaces = True
preferred_quotation = '

[all.whitespace]
use_spaces = True
bears = SpaceConsistencyBear
default_actions = *: ApplyPatchAction

[all.python]
files = **.py
language = Python

[all.python.default]
ignore += **/models.py
bears = PEP8Bear, PycodestyleBear, PyFlakesBear, QuotesBear
default_actions = *: ApplyPatchAction

[all.python.models]
files = **/models.py
bears = LineLengthBear, PycodestyleBear, PyFlakesBear, QuotesBear
max_line_length = 120

[all.links]
bears = InvalidLinkBear

[html]
bears = HTMLLintBear
files = **.html
htmllint_ignore = optional_tag, concerns_separation


[jinja]
bears = Jinja2Bear
files = **.html
default_actions = *: ApplyPatchAction
